void setup() {
  strip.begin();
  strip.setBrightness(1);
}

void gameOverMsg() {
  int pos = 0;
  for(int i = 0; i < 82; i++) {
    pos = 0;
    for(int row = 0; row < 8; row++) {
      delay(10);
      for(int col = 0; col < 8; col++) {
        if(gameOverMessage[row][col + i]) {
          strip.setPixelColor(pos, white);
        }
        else {
          strip.setPixelColor(pos, off);
        }
        pos++;
      }
      strip.show();
    }
  }
}

void clearScreen() {
  for(int i = 0; i < 64; i++) {
    strip.setPixelColor(i, off);
    strip.show();
  }
}

void loop() {
  gameOverMsg();
  clearScreen();
}
