    clearSelectedSpaces();
    int matrixPos = -1;
    // for(int i = 0; i < 8; i++){
    //     for(int j = 0; j < 8; j++){
    //         matrixPos++;
    //         if(hLetter[i][j]){
    //             strip.setPixelColor(matrixPos,red);
